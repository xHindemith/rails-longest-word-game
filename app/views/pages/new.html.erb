<h1>New game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form-control" type="text" placeholder="Awnser" name="new">
  <input hidden="true" type="text" value="<%= @letters.join('') %>" name="letters">
  <input type="submit" value="play" class="btn btn-light">
  <!-- ... -->
</form>
